    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="14dp">

            <android.support.v7.widget.CardView
                android:id="@+id/Card_view"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="2dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/id_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/colorPrimaryDark"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="10dp"
                            android:text="Week"
                            android:textColor="#000"
                            android:textSize="25sp"/>

                        <TextView
                            android:id="@+id/temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="30°"
                            android:textColor="#000"
                            android:textSize="55sp"/>

                        <TextView
                            android:id="@+id/weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/week"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="20dp"
                            android:text="weather"
                            android:textColor="#000"
                            android:textSize="30sp"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:padding="5dp"
                                android:src="@drawable/rainfall"/>

                            <TextView
                                android:id="@+id/rainfall"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="降雨量"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:padding="5dp"
                                android:src="@drawable/humidity"/>

                            <TextView
                                android:id="@+id/humidity"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="湿度"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:padding="5dp"
                                android:src="@drawable/winddirection"/>

                            <TextView
                                android:id="@+id/winddirection"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="km/h"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="3dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <ImageView
                            android:id="@+id/id_tomorrow01"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:padding="7dp"
                            android:src="@drawable/mytemp"/>

                        <TextView
                            android:id="@+id/week_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@id/id_tomorrow01"
                            android:text="今天"
                            android:textColor="#000"
                            android:textSize="20sp"/>

                        <ImageView
                            android:id="@+id/id_wea_01"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/img999"
                            android:textColor="#000"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/temp_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:text="temp1～temp2"
                            android:textColor="#000"
                            android:textSize="23sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <ImageView
                            android:id="@+id/id_tomorrow02"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:padding="7dp"
                            android:src="@drawable/mytemp"/>

                        <TextView
                            android:id="@+id/week_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@id/id_tomorrow02"
                            android:text="明天"
                            android:textColor="#000"
                            android:textSize="20sp"/>

                        <ImageView
                            android:id="@+id/id_wea_02"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/img999"
                            android:textColor="#000"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/temp_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:text="temp1～temp2"
                            android:textColor="#000"
                            android:textSize="23sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <ImageView
                            android:id="@+id/id_tomorrow03"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:padding="7dp"
                            android:src="@drawable/mytemp"/>

                        <TextView
                            android:id="@+id/week_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@id/id_tomorrow03"
                            android:text="后天"
                            android:textColor="#000"
                            android:textSize="20sp"/>

                        <ImageView
                            android:id="@+id/id_wea_03"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/img999"
                            android:textColor="#000"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/temp_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:text="temp1～temp2"
                            android:textColor="#000"
                            android:textSize="23sp"/>
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="3dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <ImageView
                            android:id="@+id/id_cloth"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="20dp"
                            android:src="@drawable/cloth"/>

                        <TextView
                            android:id="@+id/id_cloth_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/id_cloth"
                            android:text="穿衣指数"
                            android:textColor="#000"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/id_cloth_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/id_cloth_tx"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/id_cloth"
                            android:maxLines="3"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <ImageView
                            android:id="@+id/id_sport"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="20dp"
                            android:src="@drawable/sport"/>

                        <TextView
                            android:id="@+id/id_sport_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_toRightOf="@id/id_sport"
                            android:text="运动指数"
                            android:textColor="#000"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/id_sport_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/id_sport_tx"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/id_sport"
                            android:maxLines="3"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <ImageView
                            android:id="@+id/id_ultraviolet_radiation"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="20dp"
                            android:src="@drawable/ultraviolet_radiation"/>

                        <TextView
                            android:id="@+id/id_ultraviolet_radiation_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/id_ultraviolet_radiation"
                            android:text="紫外线指数"
                            android:textColor="#000"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/id_ultraviolet_radiation_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/id_ultraviolet_radiation_tx"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/id_ultraviolet_radiation"
                            android:maxLines="3"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <ImageView
                            android:id="@+id/id_air_conditioning"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="20dp"
                            android:src="@drawable/getcold1"/>

                        <TextView
                            android:id="@+id/id_air_conditioning_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/id_air_conditioning"
                            android:text="感冒指数"
                            android:textColor="#000"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/id_air_conditioning_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/id_air_conditioning_tx"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/id_air_conditioning"
                            android:maxLines="3"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <!--</com.yalantis.phoenix.PullToRefreshView>-->
    <!--</LinearLayout>-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/id_float_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:clickable="true"
        android:src="@drawable/refresh"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"/>
</android.support.design.widget.CoordinatorLayout>