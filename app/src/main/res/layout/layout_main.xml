<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    >

    <LinearLayout
        android:background="#0080FF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

       <TextView
           android:paddingLeft="20dp"
           android:textSize="30sp"
           android:textColor="#000"
           android:gravity="center_vertical"
           android:text="极速天气"
           android:layout_weight="5"
           android:layout_width="0dp"
           android:layout_height="match_parent"/>
        <ImageButton
            android:padding="13dp"
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0080FF"
            android:scaleType="fitCenter"
            android:src="@drawable/search"/>
    </LinearLayout>

    <com.yalantis.phoenix.PullToRefreshView
        android:id="@+id/pullToRefreshView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-3dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/Card_view"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:cardBackgroundColor="#0080FF"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:text="Week"
                            android:textColor="#000"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:text="City"
                            android:textColor="#000"
                            android:textSize="25sp"/>

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/img99"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Temp"
                            android:textColor="#000"
                            android:textSize="40sp"/>

                        <TextView
                            android:layout_marginTop="-15dp"
                            android:id="@+id/weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img"
                            android:layout_centerHorizontal="true"
                            android:text="weather"
                            android:textColor="#000"
                            android:textSize="25sp"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="-10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <ImageView
                                android:id="@+id/id_tomorrow01"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:padding="7dp"
                                android:src="@drawable/mytemp"/>

                            <TextView
                                android:id="@+id/week_01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@id/id_tomorrow01"
                                android:text="WEEK"
                                android:textColor="#000"
                                android:textSize="20sp"/>

                            <ImageView
                                android:id="@+id/id_wea_01"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_margin="10dp"
                                android:src="@drawable/img99"
                                android:textColor="#000"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/temp_01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:text="temp1～temp2"
                                android:textColor="#000"
                                android:textSize="23sp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <ImageView
                                android:id="@+id/id_tomorrow02"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:padding="7dp"
                                android:src="@drawable/mytemp"/>

                            <TextView
                                android:id="@+id/week_02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@id/id_tomorrow02"
                                android:text="WEEK"
                                android:textColor="#000"
                                android:textSize="20sp"/>

                            <ImageView
                                android:id="@+id/id_wea_02"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_margin="10dp"
                                android:src="@drawable/img99"
                                android:textColor="#000"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/temp_02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:text="temp1～temp2"
                                android:textColor="#000"
                                android:textSize="23sp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <ImageView
                                android:id="@+id/id_tomorrow03"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:padding="7dp"
                                android:src="@drawable/mytemp"/>

                            <TextView
                                android:id="@+id/week_03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@id/id_tomorrow03"
                                android:text="WEEK"
                                android:textColor="#000"
                                android:textSize="20sp"/>

                            <ImageView
                                android:id="@+id/id_wea_03"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_margin="10dp"
                                android:src="@drawable/img99"
                                android:textColor="#000"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/temp_03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:text="temp1～temp2"
                                android:textColor="#000"
                                android:textSize="23sp"/>
                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/id_cloth"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_margin="20dp"
                                android:src="@drawable/cloth"/>

                            <TextView
                                android:id="@+id/id_cloth_tx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@id/id_cloth"
                                android:text="穿衣指数"
                                android:textColor="#000"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/id_cloth_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/id_cloth_tx"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@id/id_cloth"
                                android:maxLines="3"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="15sp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/id_sport"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_margin="20dp"
                                android:src="@drawable/sport"/>

                            <TextView
                                android:id="@+id/id_sport_tx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:layout_toRightOf="@id/id_sport"
                                android:text="运动指数"
                                android:textColor="#000"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/id_sport_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/id_sport_tx"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@id/id_sport"
                                android:maxLines="3"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="15sp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/id_ultraviolet_radiation"

                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_margin="20dp"
                                android:src="@drawable/ultraviolet_radiation"/>

                            <TextView
                                android:id="@+id/id_ultraviolet_radiation_tx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@id/id_ultraviolet_radiation"
                                android:text="紫外线指数"
                                android:textColor="#000"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/id_ultraviolet_radiation_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/id_ultraviolet_radiation_tx"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@id/id_ultraviolet_radiation"
                                android:maxLines="3"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="15sp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/id_air_conditioning"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_margin="20dp"
                                android:src="@drawable/air_conditioning"/>

                            <TextView
                                android:id="@+id/id_air_conditioning_tx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@id/id_air_conditioning"
                                android:text="空调指数"
                                android:textColor="#000"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/id_air_conditioning_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/id_air_conditioning_tx"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@id/id_air_conditioning"
                                android:maxLines="3"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="15sp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </com.yalantis.phoenix.PullToRefreshView>


</LinearLayout>